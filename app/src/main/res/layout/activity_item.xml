<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="160dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="5dp"
    android:id="@+id/activity_item_layout">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        cardview:cardCornerRadius="5dp"
        cardview:cardElevation="1dp"
        cardview:cardMaxElevation="2dp"
        cardview:contentPadding="2dp">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ne_titreOffre"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="10dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="Titre ici"
                    android:textColor="@color/colorNiger"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    cardview:layout_constraintBottom_toBottomOf="parent"
                    cardview:layout_constraintEnd_toStartOf="@+id/ne_vo_nombre"
                    cardview:layout_constraintStart_toStartOf="parent"
                    cardview:layout_constraintTop_toTopOf="parent"
                    cardview:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/ne_vo_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="5dp"
                    android:drawableLeft="@drawable/ic_remove_red_eye_black_18dp"
                    android:text="15236"
                    cardview:layout_constraintBottom_toBottomOf="parent"
                    cardview:layout_constraintEnd_toEndOf="parent"
                    cardview:layout_constraintStart_toEndOf="@+id/ne_titreOffre"
                    cardview:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/logo_cadre"
                    android:padding="4dp" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="0dp"
                    android:layout_toRightOf="@+id/imageView"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ne_organisme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:drawableLeft="@drawable/ic_account_balance_black_18dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="Organisme" />

                    <TextView
                        android:id="@+id/ne_lieu"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_location_on_black_18dp"
                        android:lines="1"
                        android:text="Niamey"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/ne_typeContra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:drawableLeft="@drawable/ic_description_black_18dp"
                        android:text="CDI" />

                    <TextView
                        android:id="@+id/ne_diplome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:drawableLeft="@drawable/ic_school_black_18dp"
                        android:lines="1"
                        android:text="BAC+5"></TextView>

                    <TextView
                        android:id="@+id/ne_validiteDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:drawableLeft="@drawable/ic_event_busy_red_18dp"
                        android:text="03/09/2019"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"></TextView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>

