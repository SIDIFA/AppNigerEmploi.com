<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.openclassrooms.mynavdrawer">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Controllers.Activities.App_sflash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Controllers.Activities.MainActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".Controllers.Activities.Contact"
            android:label="Nous contacter"
            android:parentActivityName=".Controllers.Activities.MainActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Controllers.Activities.MainActivity" />
        </activity>

        <activity
            android:name=".Controllers.Activities.Apropos"
            android:label="A propos"
            android:parentActivityName=".Controllers.Activities.MainActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Controllers.Activities.MainActivity" />
        </activity>

        <activity
            android:name=".Controllers.Activities.DetailAnnonce"
            android:label="Detail Annonce"
            android:parentActivityName=".Controllers.Activities.MainActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Controllers.Activities.MainActivity" />
        </activity>

        <activity
            android:name=".Controllers.Activities.ResultatSearch"
            android:label="Resultat recherche"
            android:parentActivityName=".Controllers.Activities.MainActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Controllers.Activities.MainActivity" />
        </activity>

        <activity
            android:name=".Controllers.Activities.UneCategorie"
            android:label="Annonces catégorisées"
            android:launchMode="singleTop"
            android:parentActivityName=".Controllers.Activities.MainActivity"
            >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Controllers.Activities.MainActivity"/>
        </activity>

    </application>

</manifest>